<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="Transparency-one"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.oussa.transparency_one.Activities.VisibilityActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_column="0"
            android:text="Select visibility level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pageTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_margin="5dp" />

        <ListView
            android:id="@+id/visibilitiesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pageTitle"
            android:layout_marginLeft="0dp" />

    </LinearLayout>

</RelativeLayout>
